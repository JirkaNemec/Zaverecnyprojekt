<Window x:Class="AimLabClone.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Aim Lab Clone" Width="800" Height="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
            <TextBlock x:Name="scoreText" Text="Score: 0" FontSize="20" Margin="0 0 550 0"/>
            
            <TextBlock x:Name="ammoText" Text="Ammo: 10" FontSize="20"/>
        </StackPanel>

        <Canvas x:Name="gameCanvas" Grid.Row="1" Background="DarkGray" MouseDown="gameCanvas_MouseDown"/>
    </Grid>
</Window>
